<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-4">
        <h2>ジャンル一覧</h2>
        <% @genres.each do |genre| %>
          <p><%= link_to genre.name, items_path(genre_id: genre.id) %></p>
        <% end %>
      </div>
      <div class="col-md-8">
        <%= render 'index', items: @items %>
      </div>
    </div>
  </div>
</main>
