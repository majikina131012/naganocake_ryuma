<h1>商品一覧</h1>

<% @items.each do |item| %>

<% if item.is_active == true %>
  <table>
    <tr>
      <th></th>
      <th>商品名</th>
      <th>税込価格</th>
    </tr>
    <tr>
      <td><%= image_tag item.get_item_image(100,100) %></td>
      <td><%= item.name %></td>
      <td><%= item.add_tax_price.to_s(:dalimited) %>
    </tr>
  </table>
<% end %>  

<% end %>