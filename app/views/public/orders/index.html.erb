<h1>注文履歴一覧</h1>

<table>
  
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>注文ステータス</th>
  </td>
  <% @orders.each do |order| %>
  <tr>
    <td>
      <%= link_to order_path(order.id) do %>
        <%#= order.created_at_jst.strftime('%Y/%m/%d') %>
        <%=  l order.created_at %>
      <% end %>
    </td>
    <td>〒<%= order.postal_code %>  <%= order.address %>  <%= order.name %></td>
    <td>
			<% order.items.each do |item| %>
				<p><%= item.name %></p>
			<% end %>
		</td>
    <td><%= order.billing_amount %>円</td>
    <td><%= order.status_i18n %></td>
  </tr>
  <% end %>
</table>