<h1>会員一覧</h1>
<% @customers.each do |customer| %>

<table>
  <tr>
    <th>会員ID</th>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <tr>
    <td><%= customer.id %></td>
    <td><%= customer.last_name %>/<%= customer.first_name %></td>
    <td><%= customer.email %></td>
    <td>
      <% if customer.is_deleted == false %>
        有効
      <% else %>
        退会済み
      <% end %>
    </td>
  </tr>
</table>

<% end %>