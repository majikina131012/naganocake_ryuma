<h2>検索結果</h2>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th>フリガナ</th>
      <th>会員ステータス</th>
      <th><br></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.full_name %></td>
				<td><%= customer.full_name_kana %></td>
				<td>
				  <% if customer.is_deleted? %>
						<span class="text-active">退会済み</span>
					<% else %>
						<span class="text-invalid">有効</span>
					<% end %>
				</td>
				<td><%= link_to "詳細", admin_customer_path(customer), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>